{
    "compilerOptions": {
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": ".",
        "removeComments": true,
        "strictPropertyInitialization": false,
        "target": "es2019"
    },
    "exclude": [
        "node_modules"
    ]
}